---
import Mermaid from '../components/Mermaid.astro';

interface Props {
  title: string;
  description?: string;
  section?: string;
}

const { title, description, section } = Astro.props;

// Helper function to properly join base URL with path
const joinPath = (path: string) => {
  const base = import.meta.env.BASE_URL;
  if (base === '/') {
    return path.startsWith('/') ? path : `/${path}`;
  }
  const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
  const cleanPath = path.startsWith('/') ? path : `/${path}`;
  return `${cleanBase}${cleanPath}`;
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Omnia Documentation</title>
    {description && <meta name="description" content={description} />}
    <link rel="icon" type="image/svg+xml" href={joinPath('/favicon.svg')} />
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      :root {
        --color-bg: #ffffff;
        --color-text: #24292f;
        --color-border: #d0d7de;
        --color-sidebar-bg: #f6f8fa;
        --color-link: #0969da;
        --color-link-hover: #0550ae;
        --color-accent: #7c3aed;
        --sidebar-width: 280px;
        --toc-width: 240px;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --color-bg: #0d1117;
          --color-text: #c9d1d9;
          --color-border: #30363d;
          --color-sidebar-bg: #161b22;
          --color-link: #58a6ff;
          --color-link-hover: #79c0ff;
          --color-accent: #a78bfa;
        }
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;
        line-height: 1.6;
        color: var(--color-text);
        background-color: var(--color-bg);
      }

      .docs-container {
        display: flex;
        min-height: calc(100vh - 60px);
      }

      .docs-sidebar {
        width: var(--sidebar-width);
        background: var(--color-sidebar-bg);
        border-right: 1px solid var(--color-border);
        position: sticky;
        top: 60px;
        height: calc(100vh - 60px);
        overflow-y: auto;
        padding: 1.5rem;
      }

      .docs-content {
        flex: 1;
        max-width: 800px;
        padding: 2rem 3rem;
        min-width: 0;
      }

      .docs-toc {
        width: var(--toc-width);
        padding: 2rem 1.5rem;
        position: sticky;
        top: 60px;
        height: calc(100vh - 60px);
        overflow-y: auto;
        display: none;
      }

      @media (min-width: 1400px) {
        .docs-toc {
          display: block;
        }
      }

      .header {
        height: 60px;
        border-bottom: 1px solid var(--color-border);
        padding: 0 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: sticky;
        top: 0;
        background: var(--color-bg);
        z-index: 100;
      }

      .header-logo {
        font-size: 1.25rem;
        font-weight: 600;
        text-decoration: none;
        color: var(--color-text);
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .header-logo span {
        color: var(--color-accent);
      }

      .header-nav {
        display: flex;
        gap: 2rem;
        align-items: center;
      }

      .header-nav a {
        text-decoration: none;
        color: var(--color-text);
        font-weight: 500;
      }

      .header-nav a:hover {
        color: var(--color-link);
      }

      a {
        color: var(--color-link);
        text-decoration: none;
      }

      a:hover {
        color: var(--color-link-hover);
        text-decoration: underline;
      }

      h1, h2, h3, h4, h5, h6 {
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        font-weight: 600;
        line-height: 1.25;
      }

      h1 {
        font-size: 2rem;
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.5rem;
      }

      h2 {
        font-size: 1.5rem;
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.3rem;
      }

      h3 {
        font-size: 1.25rem;
      }

      p {
        margin-bottom: 1rem;
      }

      pre {
        background: #f6f8fa;
        border: 1px solid var(--color-border);
        border-radius: 6px;
        padding: 1rem;
        overflow-x: auto;
        margin-bottom: 1rem;
      }

      @media (prefers-color-scheme: dark) {
        pre {
          background: #161b22;
        }
      }

      code {
        background: rgba(175, 184, 193, 0.2);
        padding: 0.2em 0.4em;
        border-radius: 3px;
        font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace;
        font-size: 85%;
      }

      pre code {
        background: none;
        padding: 0;
      }

      ul, ol {
        margin-left: 2rem;
        margin-bottom: 1rem;
      }

      blockquote {
        border-left: 4px solid var(--color-accent);
        padding-left: 1rem;
        margin: 1rem 0;
        color: #57606a;
      }

      @media (prefers-color-scheme: dark) {
        blockquote {
          color: #8b949e;
        }
      }

      table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 1rem;
      }

      th, td {
        border: 1px solid var(--color-border);
        padding: 0.5rem;
        text-align: left;
      }

      th {
        background: var(--color-sidebar-bg);
        font-weight: 600;
      }

      @media (max-width: 768px) {
        .docs-sidebar {
          display: none;
        }

        .docs-content {
          padding: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <header class="header">
      <a href={joinPath('/')} class="header-logo">
        <span>O</span>mnia
      </a>
      <nav class="header-nav">
        <a href={joinPath('/tutorials/')}>Tutorials</a>
        <a href={joinPath('/how-to/')}>How-To</a>
        <a href={joinPath('/reference/')}>Reference</a>
        <a href={joinPath('/explanation/')}>Concepts</a>
        <a href="https://github.com/altairalabs/omnia" target="_blank">GitHub</a>
      </nav>
    </header>

    <div class="docs-container">
      <aside class="docs-sidebar">
        <slot name="sidebar" />
      </aside>

      <main class="docs-content">
        <slot />
      </main>

      <aside class="docs-toc">
        <slot name="toc" />
      </aside>
    </div>

    <Mermaid />
  </body>
</html>
